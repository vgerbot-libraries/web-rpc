{
    "extends": "./tsconfig.options.json",
    "compilerOptions": {
        "composite": true,
        "lib": [
            "ESNext"
        ],
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "Bundler",
        // Include test-specific types.
        "types": [
            "vitest/globals",
            "node"
        ]
    },
    "include": [
        "**/src/**/*.ts",
        "**/__tests__/**/*.ts",
        "**/__tests__/**/*.spec.ts"
    ]
}